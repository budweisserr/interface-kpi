<Page x:Class="lab3.PageTable1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:lab3.Commands"
      Title="Page Table 1">
    <StackPanel>
        <Menu>
            <MenuItem Header="Дія">
                <MenuItem Header="Команда Undo" Command="local:DataCommands.Undo"/>
                <Separator/>
                <MenuItem Header="Команда Create" Command="local:DataCommands.New"/>
                <MenuItem Header="Команда Edit" Command="local:DataCommands.Replace"/>
                <MenuItem Header="Команда Save" Command="local:DataCommands.Save"/>
                <Separator/>
                <MenuItem Header="Команда Find" Command="local:DataCommands.Find"/>
                <MenuItem Header="Команда Delete" Command="local:DataCommands.Delete"/>
            </MenuItem>
            <MenuItem Header="Звіт"/>
        </Menu>
        <ToolBar>
            <Button ToolTip="Команда Undo" Command="local:DataCommands.Undo">
                <Image Source="Images/undo.png" Width="16" Height="16"/>
            </Button>
            <Button ToolTip="Команда Create" Command="local:DataCommands.New">
                <Image Source="Images/create.png" Width="16" Height="16"/>
            </Button>
            <Button ToolTip="Команда Edit" Command="local:DataCommands.Replace">
                <Image Source="Images/edit.png" Width="16" Height="16"/>
            </Button>
            <Button ToolTip="Команда Save" Command="local:DataCommands.Save">
                <Image Source="Images/save.png" Width="16" Height="16"/>
            </Button>
            <Button ToolTip="Команда Find" Command="local:DataCommands.Find">
                <Image Source="Images/find.png" Width="16" Height="16"/>
            </Button>
            <Button ToolTip="Команда Delete" Command="local:DataCommands.Delete">
                <Image Source="Images/delete.png" Width="16" Height="16"/>
            </Button>
        </ToolBar>
    </StackPanel>
</Page>
